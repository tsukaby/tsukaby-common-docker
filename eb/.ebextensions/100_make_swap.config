commands:
  01_enable_sudo:
    command: "echo Defaults:root !requiretty >> /etc/sudoers"
  02_dd:
    command: "sudo dd if=/dev/zero of=/swapfile bs=1M count=1024"
  03_mkswap:
    command: "sudo mkswap /swapfile"
  04_swapon:
    command: "sudo swapon /swapfile"
  05_swapdone:
    command: "touch /home/ec2-user/swapdone"
